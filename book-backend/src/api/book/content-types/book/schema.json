{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "author": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "pages": {
      "type": "integer",
      "min": 0
    },
    "isbn": {
      "type": "string"
    },
    "coverType": {
      "type": "enumeration",
      "enum": [
        "soft",
        "thin",
        "hard"
      ]
    },
    "ageRating": {
      "type": "integer",
      "max": 100,
      "min": 0
    }
  }
}
